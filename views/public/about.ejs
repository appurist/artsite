<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= config.pages.about.title %> - <%= config.site.title %></title>
    <meta name="description" content="<%= config.site.description %>">
    <link rel="stylesheet" href="/css/gallery.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Source+Sans+Pro:wght@300;400;600&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: <%= config.site.theme.primaryColor %>;
            --secondary-color: <%= config.site.theme.secondaryColor %>;
        }
    </style>
</head>
<body>
    <nav class="main-nav">
        <div class="nav-content">
            <a href="/" class="logo"><%= config.site.title %></a>
            <ul class="nav-menu">
                <li><a href="/">Gallery</a></li>
                <% if (config.pages.about.enabled) { %>
                    <li><a href="/about" class="active">About</a></li>
                <% } %>
                <% if (config.pages.contact.enabled) { %>
                    <li><a href="/contact">Contact</a></li>
                <% } %>
                <% if (config.pages.blog.enabled) { %>
                    <li><a href="/blog">Blog</a></li>
                <% } %>
            </ul>
        </div>
    </nav>

    <main class="page-main">
        <div class="page-container">
            <header class="page-header">
                <h1><%= config.pages.about.title %></h1>
            </header>
            
            <div class="page-content">
                <% if (config.artist.name) { %>
                    <section class="artist-intro">
                        <h2><%= config.artist.name %></h2>
                        <% if (config.artist.bio) { %>
                            <div class="artist-bio">
                                <p><%= config.artist.bio %></p>
                            </div>
                        <% } %>
                    </section>
                <% } %>
                
                <% if (config.pages.about.content) { %>
                    <section class="page-text">
                        <div class="content-text">
                            <%- config.pages.about.content.replace(/\n/g, '<br>') %>
                        </div>
                    </section>
                <% } %>
                
                <% if (config.artist.statement) { %>
                    <section class="artist-statement">
                        <h3>Artist Statement</h3>
                        <div class="statement-text">
                            <%- config.artist.statement.replace(/\n/g, '<br>') %>
                        </div>
                    </section>
                <% } %>
                
                <% if (config.artist.website || config.artist.email) { %>
                    <section class="artist-links">
                        <h3>Connect</h3>
                        <div class="links">
                            <% if (config.artist.website) { %>
                                <p><strong>Website:</strong> <a href="<%= config.artist.website %>" target="_blank"><%= config.artist.website %></a></p>
                            <% } %>
                            <% if (config.artist.email) { %>
                                <p><strong>Email:</strong> <a href="mailto:<%= config.artist.email %>"><%= config.artist.email %></a></p>
                            <% } %>
                            <% if (config.artist.phone) { %>
                                <p><strong>Phone:</strong> <%= config.artist.phone %></p>
                            <% } %>
                        </div>
                    </section>
                <% } %>
            </div>
        </div>
    </main>

    <footer class="gallery-footer">
        <p>&copy; <%= new Date().getFullYear() %> <%= config.site.title %>. All rights reserved.</p>
    </footer>
</body>
</html>
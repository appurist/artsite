<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Site Settings - Art Gallery Admin</title>
    <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
    <nav class="admin-nav">
        <div class="nav-content">
            <h1>Art Gallery Admin</h1>
            <div class="nav-links">
                <a href="/admin/dashboard" class="btn btn-secondary">Dashboard</a>
                <a href="/admin/upload" class="btn btn-secondary">Upload</a>
                <a href="/" target="_blank" class="btn btn-secondary">View Site</a>
                <a href="/admin/logout" class="btn btn-secondary">Logout</a>
            </div>
        </div>
    </nav>

    <div class="admin-content">
        <div class="settings-container">
            <h2>Site Settings</h2>
            
            <% if (error) { %>
                <div class="error"><%= error %></div>
            <% } %>
            
            <% if (success) { %>
                <div class="success"><%= success %></div>
            <% } %>
            
            <form method="POST" action="/admin/settings" class="settings-form">
                
                <!-- Site Information -->
                <section class="settings-section">
                    <h3>Site Information</h3>
                    
                    <div class="form-group">
                        <label for="site_title">Site Title</label>
                        <input type="text" id="site_title" name="site_title" value="<%= config.site.title %>" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="site_subtitle">Site Subtitle</label>
                        <input type="text" id="site_subtitle" name="site_subtitle" value="<%= config.site.subtitle %>">
                    </div>
                    
                    <div class="form-group">
                        <label for="site_description">Site Description</label>
                        <textarea id="site_description" name="site_description" rows="3"><%= config.site.description %></textarea>
                    </div>
                </section>

                <!-- Theme Settings -->
                <section class="settings-section">
                    <h3>Theme Settings</h3>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label for="primary_color">Primary Color</label>
                            <input type="color" id="primary_color" name="primary_color" value="<%= config.site.theme.primaryColor %>">
                        </div>
                        
                        <div class="form-group">
                            <label for="secondary_color">Secondary Color</label>
                            <input type="color" id="secondary_color" name="secondary_color" value="<%= config.site.theme.secondaryColor %>">
                        </div>
                    </div>
                    
                </section>

                <!-- Artist Information -->
                <section class="settings-section">
                    <h3>Artist Information</h3>
                    
                    <div class="form-group">
                        <label for="artist_name">Artist Name</label>
                        <input type="text" id="artist_name" name="artist_name" value="<%= config.artist.name %>">
                    </div>
                    
                    <div class="form-group">
                        <label for="artist_bio">Artist Bio</label>
                        <textarea id="artist_bio" name="artist_bio" rows="4"><%= config.artist.bio %></textarea>
                    </div>
                    
                    <div class="form-group">
                        <label for="artist_statement">Artist Statement</label>
                        <textarea id="artist_statement" name="artist_statement" rows="6"><%= config.artist.statement %></textarea>
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label for="artist_email">Email</label>
                            <input type="email" id="artist_email" name="artist_email" value="<%= config.artist.email %>">
                        </div>
                        
                        <div class="form-group">
                            <label for="artist_phone">Phone</label>
                            <input type="text" id="artist_phone" name="artist_phone" value="<%= config.artist.phone %>">
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="artist_website">Website</label>
                        <input type="url" id="artist_website" name="artist_website" value="<%= config.artist.website %>">
                    </div>
                </section>

                <!-- Page Settings -->
                <section class="settings-section">
                    <h3>Page Settings</h3>
                    
                    <!-- About Page -->
                    <div class="page-setting">
                        <div class="form-group checkbox-group">
                            <label>
                                <input type="checkbox" name="about_enabled" <%= config.pages.about.enabled ? 'checked' : '' %>>
                                Enable About Page
                            </label>
                        </div>
                        
                        <div class="form-group">
                            <label for="about_title">About Page Title</label>
                            <input type="text" id="about_title" name="about_title" value="<%= config.pages.about.title %>">
                        </div>
                        
                        <div class="form-group">
                            <label for="about_content">About Page Content</label>
                            <textarea id="about_content" name="about_content" rows="6"><%= config.pages.about.content %></textarea>
                        </div>
                    </div>

                    <!-- Contact Page -->
                    <div class="page-setting">
                        <div class="form-group checkbox-group">
                            <label>
                                <input type="checkbox" name="contact_enabled" <%= config.pages.contact.enabled ? 'checked' : '' %>>
                                Enable Contact Page
                            </label>
                        </div>
                        
                        <div class="form-group">
                            <label for="contact_title">Contact Page Title</label>
                            <input type="text" id="contact_title" name="contact_title" value="<%= config.pages.contact.title %>">
                        </div>
                        
                        <div class="form-group">
                            <label for="contact_content">Contact Page Content</label>
                            <textarea id="contact_content" name="contact_content" rows="6"><%= config.pages.contact.content %></textarea>
                        </div>
                    </div>

                    <!-- Blog -->
                    <div class="page-setting">
                        <div class="form-group checkbox-group">
                            <label>
                                <input type="checkbox" name="blog_enabled" <%= config.pages.blog.enabled ? 'checked' : '' %>>
                                Enable Blog (Coming Soon)
                            </label>
                        </div>
                        
                        <div class="form-group">
                            <label for="blog_title">Blog Title</label>
                            <input type="text" id="blog_title" name="blog_title" value="<%= config.pages.blog.title %>">
                        </div>
                    </div>
                </section>
                
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Save Settings</button>
                    <a href="/admin/dashboard" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Art Gallery</title>
    <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
    <nav class="admin-nav">
        <div class="nav-content">
            <h1>Art Gallery Admin</h1>
            <div class="nav-links">
                <span>Welcome, <%= username %></span>
                <a href="/admin/upload" class="btn btn-primary">Upload New Artwork</a>
                <a href="/admin/settings" class="btn btn-secondary">Site Settings</a>
                <a href="/" target="_blank" class="btn btn-secondary">View Gallery</a>
                <a href="/admin/logout" class="btn btn-secondary">Logout</a>
            </div>
        </div>
    </nav>

    <div class="admin-content">
        <div class="section-header">
            <h2>Your Artwork Collection</h2>
            <p><%= artworks.length %> artwork(s) in gallery</p>
        </div>

        <% if (artworks.length === 0) { %>
            <div class="empty-state">
                <h3>No artwork uploaded yet</h3>
                <p>Start by uploading your first piece of art!</p>
                <a href="/admin/upload" class="btn btn-primary">Upload Artwork</a>
            </div>
        <% } else { %>
            <div class="artwork-grid">
                <% artworks.forEach(function(artwork) { %>
                    <div class="artwork-card">
                        <div class="artwork-image">
                            <img src="/uploads/thumbs/<%= artwork.thumbnail_filename %>" 
                                 alt="<%= artwork.title %>" 
                                 loading="lazy">
                        </div>
                        <div class="artwork-info">
                            <h3><%= artwork.title %></h3>
                            <p class="artwork-medium"><%= artwork.medium %></p>
                            <% if (artwork.year_created) { %>
                                <p class="artwork-year"><%= artwork.year_created %></p>
                            <% } %>
                            <div class="artwork-actions">
                                <a href="/artwork/<%= artwork.id %>" target="_blank" class="btn btn-small">View</a>
                                <a href="/admin/edit/<%= artwork.id %>" class="btn btn-small">Edit</a>
                                <form method="POST" action="/admin/delete/<%= artwork.id %>" 
                                      onsubmit="return confirm('Are you sure you want to delete this artwork?')" 
                                      style="display: inline;">
                                    <button type="submit" class="btn btn-small btn-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } %>
    </div>
</body>
</html>